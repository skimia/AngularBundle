{{bundle.shortName|lower}}_{{name|lower}}_list:
    pattern: /{{name|lower}}
    controller: "{{name}}.ListController" 
    view: "@{{bundle.name}}:{{name}}:list.html.twig"
    title: "LIST {{name}}"

{{bundle.shortName|lower}}_{{name|lower}}_create:
    pattern: /{{name|lower}}/new
    controller: "{{name}}.CreateController" 
    view: "@{{bundle.name}}:{{name}}:form.html.twig"
    title: "CREATE {{name}}"
    
{{bundle.shortName|lower}}_{{name|lower}}_show:
    pattern: /{{name|lower}}/:{{name|lower}}Id
    controller: "{{name}}.ShowController" 
    view: "@{{bundle.name}}:{{name}}:show.html.twig"
    title: "SHOW {{name}} "
    
{{bundle.shortName|lower}}_{{name|lower}}_edit:
    pattern: /{{name|lower}}/:{{name|lower}}Id/edit
    controller: "{{name}}.EditController" 
    view: "@{{bundle.name}}:{{name}}:form.html.twig"
    title: "EDIT {{name}}"
